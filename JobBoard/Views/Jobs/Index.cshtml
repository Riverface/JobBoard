@using JobBoard.Models;
<h1>Job Board.</h1>
<ul>
@if (Model.Count == 0)
{
  <p>There are no openings in the list.</p>
}
<ul>
    @if(Model.Count > 0){

        @foreach (Job opening in Model)
        {
            <li><a href="jobs/@opening.ID"  >@opening.Name</a></li>
        }
    }
</ul>

    <a href="/jobs/new">Add a new Job.</a> 
    <form  action="/jobs/delete" method="post">
    <button type="submit">Delete All</button>
    </form>